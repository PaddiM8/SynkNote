<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:label="@string/notebook_name"
        android:padding="0dp"
        android:text="@string/notebook_name"
        android:textColor="@color/colorBackgroundDark"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="25dp" />

    <EditText
        android:id="@+id/notebook_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:inputType="text"
        tools:ignore="LabelFor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:label="@string/notebook_location"
        android:padding="0dp"
        android:text="@string/notebook_location"
        android:textColor="@color/colorBackgroundDark"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/notebook_location_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="default"
        android:inputType="text"
        tools:ignore="LabelFor" />

    <Switch
        android:id="@+id/notebook_sync_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:checked="true"
        android:text="Sync"
        android:textSize="18sp" />

</LinearLayout>