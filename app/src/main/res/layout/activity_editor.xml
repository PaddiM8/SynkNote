<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="synknotecom.paddi.synknote.MarkdownEditor">

    <TabHost
        android:id="@+id/editorTabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        android:theme="@style/TabWidgetTheme">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/tabHostBackground"
                android:visibility="visible" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/markdown_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="56dp"
                    android:orientation="vertical">

                    <com.onegravity.rteditor.RTEditText
                        android:id="@+id/markdown_editor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/droid_serif"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:paddingBottom="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="15dp"
                        android:textColor="?attr/textColorEditor"
                        android:textIsSelectable="true"
                        android:textSize="24sp"
                        android:typeface="serif"
                        tools:ignore="LabelFor" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/document_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="56dp"
                    android:gravity="start"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/text_editor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/droid_serif"
                        android:gravity="top"
                        android:inputType="none"
                        android:paddingBottom="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="15dp"
                        android:textColor="?attr/textColorEditor"
                        android:textIsSelectable="true"
                        android:typeface="serif"
                        tools:ignore="LabelFor" />

                </LinearLayout>

            </FrameLayout>
        </RelativeLayout>
    </TabHost>

</RelativeLayout>
